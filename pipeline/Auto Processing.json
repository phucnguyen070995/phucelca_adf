{
	"name": "Auto Processing",
	"properties": {
		"activities": [
			{
				"name": "Lookup Configuration File",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"sqlReaderQuery": {
							"value": "select Src, Des, TableType from TrafficCop.Mapping\nwhere IsActive = 1 and Id = @{pipeline().parameters.id}",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "SQLServer_DIL_Dataset",
						"type": "DatasetReference",
						"parameters": {
							"fileName": "Mapping",
							"schema": "TrafficCop"
						}
					},
					"firstRowOnly": false
				}
			},
			{
				"name": "Check Table Type_copy1",
				"type": "IfCondition",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@equals(item().TableType, 'F')",
						"type": "Expression"
					},
					"ifFalseActivities": [
						{
							"name": "Set variable schemaTableType D_copy1",
							"type": "SetVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "schemaTableType",
								"value": "'fullextfinal'"
							}
						}
					],
					"ifTrueActivities": [
						{
							"name": "Set variable schemaTableType_copy1",
							"type": "SetVariable",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"variableName": "schemaTableType",
								"value": "'fullbyextfinal'"
							}
						}
					]
				}
			},
			{
				"name": "Copy file full from ADLS to SQLServer_copy1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "SqlServerSink",
						"tableOption": "autoCreate"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "ADLS_Dataset",
						"type": "DatasetReference",
						"parameters": {
							"fileNameCsv": {
								"value": "@item().Src",
								"type": "Expression"
							},
							"schema": {
								"value": "@variables('schemaTableType')",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "Write_All_Files_Full_By_Ext",
						"type": "DatasetReference",
						"parameters": {
							"fileName": {
								"value": "@substring(pipeline().parameters.fileName, 0, add(length(pipeline().parameters.fileName), -4))",
								"type": "Expression"
							}
						}
					}
				]
			},
			{
				"name": "Lookup Configuration File_copy1_copy1",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SqlServerSource",
						"sqlReaderQuery": {
							"value": "select Src, Des, TableType from TrafficCop.@{pipeline().parameters.fileNameTrafficCop}\nwhere IsActive = 1",
							"type": "Expression"
						},
						"queryTimeout": "02:00:00",
						"partitionOption": "None"
					},
					"dataset": {
						"referenceName": "SQLServer_DIL_Dataset",
						"type": "DatasetReference",
						"parameters": {
							"fileName": {
								"value": "@pipeline().parameters.fileNameTrafficCop",
								"type": "Expression"
							},
							"schema": "TrafficCop"
						}
					},
					"firstRowOnly": false
				}
			}
		],
		"parameters": {
			"id": {
				"type": "int",
				"defaultValue": 0
			}
		},
		"variables": {
			"schemaTableType": {
				"type": "String",
				"defaultValue": "schemaTableType"
			}
		},
		"folder": {
			"name": "BoardToDIL"
		},
		"annotations": []
	}
}